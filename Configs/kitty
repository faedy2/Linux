# Location: ~/.config/kitty/kitty.conf

# Make it so that new windows/tabs will stay on the same pwd
map kitty_mod+enter new_window_with_cwd
map kitty_mod+n new_os_window_with_cwd
# New tabs will open next to the current tab rather than at the end of the tabs list
map kitty_mod+t new_tab_with_cwd !neighbor

# Reset font size
map kitty_mod+0 change_font_size all 0

# Closing a tab will take you to the tab to the left of it
tab_switch_strategy left

# Put tab bar on top of the screen
tab_bar_edge top

# Confirm when closing window that contains at least 2 instances of kitty
confirm_os_window_close 2

# Fonts
font_family         Ubuntu Mono
bold_font           auto
italic_font         auto
bold_italic_font    auto
font_size           14.5

# Sound
enable_audio_bell no

# Tab Bar
tab_bar_style powerline 
